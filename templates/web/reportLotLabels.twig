{% extends "layout/layout.twig" %}

{% block css %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'web/reportLotLabels' %}
{% endblock %}

{% block title_all_page %}
  <title> Nihon Packing : Report Lot Labels </title>
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                  <div class="row">
                    <div class="col-12">
                        <div class="modal-content">
                            <form id="form-reportStockPack" action="api/export_report_lot_labels">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h2><i class="fas fa-ruler-combined"></i> Report Lot Labels</h2>
                                </div>
                                <!-- Modal body -->
                                <div class="modal-body">                                       
                                        {# filter mfg lot no #}
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label for="MFGLot-report">Shiping/MFG Lot No</label>
                                                <input type="text" class="form-control" name="lot_no"></input>
                                            </div>
                                        </div> 

                                        
                                        
                                        <div class="col-12 text-center">
                                            <button type="submit" class="btn btn-primary">Generate Excel</button>
                                        </div>
                                </div>                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}