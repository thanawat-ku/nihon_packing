{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/selectDefectForScraps' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fas fa-sitemap"></i>
					Defect Select list</h2>
				<hr>
				<div>
					<h5>{{ scrapRow.scrap_no }}
					</h5>
					<span>{{'Scrap Date: ' ~ scrapRow.scrap_date}}</span><br>
					<span>{{'Scrap Status: ' ~ scrapRow.scrap_status}}</span>
				</div>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Defect Code</th>
							<th>Defect Description</th>
							<th>OQC Check</th>
							<th>Product Name</th>
							<th>Quantity</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for lotDefect in lotDefects %}
							<tr>
								<td>{{ lotDefect.defect_code }}</td>
								<td>{{ lotDefect.defect_description }}</td>
								<td>{{ lotDefect.oqc_check }}</td>
								<td>{{ lotDefect.part_name }}</td>
								<td>{{ lotDefect.quantity}}</td>
								<td>
									<button type="button" id="addBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addSelectLabelForScrap" name="{{ lotDefect|json_encode }}">
										<i style="font-size:15px; width:20px;" class="fas fa-plus"></i>
									</button>
								</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>
				<form action="scrap_details" method="get">
					<input type="hidden" name="scrap_id" value="{{scrapRow.id}}">
					<button type="submit" class="btn btn-primary" id="black">
						<i class="fas fa-arrow-left"></i>
						Back</button>
				</form>
				<p></p>
			</div>
		</div>
	</div>

	<!-- Modal Add Scrap Label -->
	<div class="modal fade" id="addSelectLabelForScrap">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-editCpoItemSelect" action="add_scrap_detail" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Add Defect in Scrap</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-scrap">
							<input type="hidden" id="addLotDefectID" name="id">
							<input type="hidden" name="scrap_id" value="{{ scrapRow.id }}">
							<label for="labelNo">Defect Code:
								<label id="addDefectCode"></span>
							</label>
						</div>
						<div class="form-scrap">
							<label for="labelNo">Quantity:
								<span id="addQuantity"></span>
							</label>
						</div>
						<div class="form-sell">
							<label for="email">Select Section</label>
							<select class="selectpicker form-control" id="addProductID" name="section_id" data-live-search="true">
								{% for s in sections %}
									<option value={{ s.id }}>({{s.section_name}})
										{{ s.section_description}}
									</option>
								{% endfor %}
							</select>
						</div>
						<div class="modal-footer">
							<button type="submit" class="btn btn-success">Add</button>
							<button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
						</div>
					</form>
				</div>
			</div>
		</div>

	{% endblock %}
