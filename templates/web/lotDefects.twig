{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/lotDefects' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-object-ungroup"></i> Lotdefect Lot: {{lot_no}}</h2>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">     
                    <thead>
                    <tr>
                        {# <th>Lot No</th> #}
                        <th>Defect Code</th>
                        <th>Quantity</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lotDefect in lotDefects %}                    
                    <tr>
                        {# <td>{{ lotDefect.lot_no}}</td> #}
                        <td>{{ lotDefect.defect_code}}</td>
                        <td>{{ lotDefect.quantity}}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteSplitLabel" name="{{ lotDefect|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>


{% endblock %}