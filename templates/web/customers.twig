{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/customers' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-address-card"></i> Customer list</h2>
                <button type="button" id="addBt" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addCustomer"><i style="font-size:15px; width:20px;" class="fas fa-address-card"></i> Add Customer</button>      
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Tel No</th>
                        <th>Address</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for customer in customers %}                    
                    <tr>
                        <td>{{ customer.customer_name }}</td>
                        <td>{{ customer.tel_no }}</td>
                        <td>{{ customer.address }}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editCustomer" name="{{ customer|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteCustomer" name="{{ customer|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>

<!-- Modal Add customer -->
<div class="modal fade" id="addCustomer">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-addCustomer" action="add_customer" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add Customer</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-customer">
            <label for="customerName">Customer Name</label>
            <input type="text" autocomplete="off" class="form-control" id="addCustomerName" name="customer_name" required>
          </div>          
          <div class="form-customer">
            <label for="telNo">Tel No</label>
            <input type="text" autocomplete="off" class="form-control" id="addTelNo" name="tel_no" required>
          </div>
          <div class="form-customer">
            <label for="addAddress">Address</label>
            <input type="text" autocomplete="off" class="form-control" id="addAddress" name="address" required>
          </div> 
        </div>          
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Edit customer -->
<div class="modal fade" id="editCustomer">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editCustomer" action="edit_customer" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Customer</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-customer">
            <input type="hidden" id="editCustomerID" name="id">
            <label for="customerName">Customer Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editCustomerName" name="customer_name" required>
          </div>          
          <div class="form-customer">
            <label for="telNo">Tel No</label>
            <input type="text" autocomplete="off" class="form-control" id="editTelNo" name="tel_no" required>
          </div>
          <div class="form-customer">
            <label for="addAddress">Address</label>
            <input type="text" autocomplete="off" class="form-control" id="editAddress" name="address" required>
          </div>
        </div>            
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Delete customer -->
<div class="modal fade" id="deleteCustomer">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteCustomer" action="delete_customer" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete Customer</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteCustomerID" name="id">
            <label for="customerNo">Do you want to delete customer: <span id="deleteCustomerName"></span></label>
          </div>                 
          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}