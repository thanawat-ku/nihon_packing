{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/customers' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-address-card"></i> Customer list</h2>
                <button type="button" id="addBt" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addCustomer"><i style="font-size:15px; width:20px;" class="fas fa-address-card"></i> Add Customer</button>      
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Tel No</th>
                        <th>Address</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for customer in customers %}                    
                    <tr>
                        <td>{{ customer.customer_name }}</td>
                        <td>{{ customer.tel_no }}</td>
                        <td>{{ customer.address }}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
<!-- Modal Add customer -->
<div class="modal fade" id="addCustomer">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-addCustomer" action="add_customer" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add Customer</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-customer">
            <label for="customerName">Customer Name</label>
            <input type="text" autocomplete="off" class="form-control" id="addCustomerName" name="customername" required>
          </div>          
          <div class="form-customer">
            <label for="email">Email</label>
            <input type="text" autocomplete="off" class="form-control" id="addEmail" name="email" required>
          </div>
          <div class="form-customer">
            <label for="addPassword">Password</label>
            <input type="password" autocomplete="off" class="form-control" id="addPassword" name="password" required>
          </div>          
          <div class="form-customer">
            <label for="addConfirmPassword">Confirm Password</label>
            <input type="password" autocomplete="off" class="form-control" id="addConfirmPassword" name="confirmPassword" required>
          </div>         
          <div class="form-customer">
            <label for="firstName">First Name</label>
            <input type="text" autocomplete="off" class="form-control" id="addFirstName" name="first_name" required>
          </div>          
          <div class="form-customer">
            <label for="lasttName">Last Name</label>
            <input type="text" autocomplete="off" class="form-control" id="addLastName" name="last_name" required>
          </div>         
          <div class="form-customer">
            <label for="email">Group</label>
            <select class="form-control"  id="addCustomerRoleID" name="customer_role_id">
                <option value="1">Admin</option>
                <option value="2">Customer</option>
                <option value="3">Store</option>
                <option value="4">Manager</option>
                <option value="5">Store Manager</option>
                <option value="6">Super Admin</option>
                <option value="7">Finance</option>
            </select>
          </div>         
          <div class="form-customer">
            <label for="email">Store</label>
            <select class="form-control"  id="addStoreID" name="store_id">
                <option value="1">Ayutthaya</option>
                <option value="2">Khonkean</option>
            </select>
          </div>        
          <div class="form-customer">
            <label for="enabled">Enabled</label>
            <select class="form-control"  id="editEnabled" name="enabled">
                <option value="1">enable</option>
                <option value="0">disable</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
