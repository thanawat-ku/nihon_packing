{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/lots' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-dolly"></i> Lot list</h2>
                <button type="button" id="addBt" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addLot"><i style="font-size:15px; width:20px;" class="fas fa-dolly"></i> Add Lot</button>      
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Lot No</th>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Std Pack</th>
                        <th>Std Box</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lot in lots %}                    
                    <tr>
                        <td>{{ lot.lot_no }}</td>
                        <td>{{ '(' ~ lot.product_code ~ ') ' ~ lot.product_name}}</td>
                        <td>{{ lot.quantity }}</td>
                        <td>{{ lot.std_pack }}</td>
                        <td>{{ lot.std_box }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
<!-- Modal Add product -->
<div class="modal fade" id="addLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-addLot" action="add_lot" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add Lot</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <label for="lotNo">Lot No</label>
            <input type="text" autocomplete="off" class="form-control" id="addLoNo" name="lot_no" required>
          </div>                 
          <div class="form-product">
            <label for="email">Product</label>
            <select class="form-control"  id="addProductID" name="product_id">
            {% for p in products %}
              <option value={{ p.id }}>({{p.product_code}}) {{ p.product_name}} </option>
            {% endfor %}
            </select>
          </div>           
          <div class="form-product">
            <label for="lotNo">Quantity</label>
            <input type="text" autocomplete="off" class="form-control" id="addQuantity" name="quantity" required>
          </div> 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
    <!-- Modal edit product -->
<div class="modal fade" id="editProduct">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editProduct" action="edit_product" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Product</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="text" id="editProductID" name="id" hidden>
            <label for="productName">Product Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editProductName" name="productname" required>
          </div>          
          <div class="form-product">
            <label for="email">Email</label>
            <input type="text" autocomplete="off" class="form-control" id="editEmail" name="email" required>
          </div>
          <div class="form-product">
            <label for="editPassword">Password</label>
            <input type="password" autocomplete="off" class="form-control" id="editPassword" name="password">
          </div>          
          <div class="form-product">
            <label for="editConfirmPassword">Confirm Password</label>
            <input type="password" autocomplete="off" class="form-control" id="editConfirmPassword" name="confirmPassword">
          </div>         
          <div class="form-product">
            <label for="firstName">First Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editFirstName" name="first_name" required>
          </div>          
          <div class="form-product">
            <label for="lasttName">Last Name</label>
            <input type="text" autocomplete="off" class="form-control" id="editLastName" name="last_name" required>
          </div>         
          <div class="form-product">
            <label for="email">Group</label>
            <select class="form-control"  id="editProductRoleID" name="product_role_id">
                <option value="1">Admin</option>
                <option value="2">Product</option>
                <option value="3">Store</option>
                <option value="4">Manager</option>
                <option value="5">Store Manager</option>
                <option value="6">Super Admin</option>
                <option value="7">Finance</option>
            </select>
          </div>          
          <div class="form-product">
            <label for="email">Store</label>
            <select class="form-control"  id="editStoreID" name="store_id">
                <option value="1">Ayutthaya</option>
                <option value="2">Khonkean</option>
            </select>
          </div>         
          <div class="form-product">
            <label for="enabled">Enabled</label>
            <select class="form-control"  id="editEnabled" name="enabled">
                <option value="1">enable</option>
                <option value="0">disable</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}