{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/lots' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-dolly"></i> Lot list</h2>
                <label for=" ">     <span ></span></label>
                <form id="form-searchIssue" class="form-inline float-right" action="" method="get">
                  Issue Date From:&nbsp;&nbsp;
                  <input type="text" autocomplete="off" class="form-control" id="searchIssueStartDate" name="startDate" value="{{startDate}}">&nbsp;&nbsp;To&nbsp;&nbsp; 
                  <input type="text" autocomplete="off" class="form-control" id="searchIssueEndDate" name="endDate" value="{{endDate}}">&nbsp;&nbsp;
                  <button type="submit" class="btn btn-warning" id="searchIssueBt"><i class="fas fa-search fa-lg"></i> Search</button>
                </form>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Lot No</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Real Quantity</th>
                        <th>STD Pack/Box</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lot in lots %}                    
                    <tr>
                        {% if lot.status == "CREATED" %}
                        <td>{{ lot.lot_no }}</td>
                        {% endif %}
                        {% if lot.status != "CREATED" %}
                        <td>{{ lot.generate_lot_no }}</td>
                        {% endif %}
                        <td>{{ '(' ~ lot.part_code ~ ') ' ~ lot.part_name}}</td>
                        <td>{{ lot.quantity }}</td>
                        <td>{{ lot.real_qty }}</td>
                        <td>{{ lot.std_pack ~ '/' ~ lot.std_box }}</td>
                        <td>{{ lot.status }}</td>
                        <td>
                        {% if lot.status == "CREATED" %}
                        <a href="lot_defect_detail?id={{lot.id}}"><button type="button" class="btn btn-info btn-sm" data-toggle="modal" ><i style="font-size:15px; width:20px;" class="fas fa-tools"></i></button></a>
                        <button type="button" id="printBt" class="btn btn-info btn-sm" data-toggle="modal" data-target="#printLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-print"></i></button>
                        {% endif %}
                        {% if lot.status == "PRINTED" %}
                        <button type="button" id="registerBt" class="btn btn-info btn-sm" data-toggle="modal" data-target="#registerLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-check-circle"></i></button>
                        {% endif %}
                        {% if lot.status != "CREATED" %}
                        <a href="label_lot?id={{lot.id}}"><button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" ><i style="font-size:15px; width:20px;" class="fas fa-info-circle"></i></button></a> 
                        {% endif %}
                        {% if lot.status == "CREATED" %}
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>                   
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteLot" name="{{ lot|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>    
                        {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>

<!-- Modal Print lot -->
<div class="modal fade" id="printLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
    <form id="form-printLot" name ="confirm" action="{{ confirm|json_encode }}">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Input Real Quantity</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="printLotID">
            <label for="lotNo">Add Real Quantity</label>
            <input type="text" autocomplete="off" class="form-control" id="realQTY" required>
          </div>              
        </div>
        <div class="modal-footer">
          <button type="submit" id="confirmPrintLotBt" class="btn btn-info " data-toggle="modal" data-target="#confirmPrintLot" data-dismiss="modal" ></i> Print</button> 
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal confirmPrint lot -->
<div class="modal fade" id="confirmPrintLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-printLot" action="print_lot" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Are you sure?</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            {# <input type="text" id="printLotID" name ="id"> #}
            <input type="hidden" id="confirmPrintLotID" name ="id">
            <input type="hidden" id="confirmRealQty2" name ="real_qty">
            <label for="lotNo">Real Quantity is: <span id="confirmRealQty">xxx</span></label></label>
          </div>
          <div>
            <label for="lotNo">Do you want to print labels of lot: <span id="printLotNo">xxx</span> ?</label>   
          </div> 
          <div class="form-spec">
          <label for="lotNo">    <span id="spec">  </span></label>
          </div>                    
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-info">Print</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!--regiserLot-->
<div class="modal fade" id="registerLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-defectLot" action="register_lot" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Register Lot </h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="registerLotID" name="lot_id">
          </div>
          <div class="form-realQty">
          <label for="lotNo">Do you want to register lot: <span id="registerLotNo"></span> ?</label>
          </div>                            
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Yes</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal edit lot -->
<div class="modal fade" id="editLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editLot" action="edit_lot" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Lot</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="editLotID" name="id">
            <label for="lotNo">Lot No</label>
            <input type="text" autocomplete="off" class="form-control" id="editLotNo" name="lot_no" required>
          </div>                 
          <div class="form-product">
            <label for="email">Product</label>
            <select class="selectpicker form-control"  id="editProductID" name="product_id" data-live-search="true">
            {% for p in products %}
              <option value={{ p.id }}>({{p.part_code}}) {{ p.part_name}} </option>
            {% endfor %}
            </select>
          </div>           
          <div class="form-product">
            <label for="lotNo">Quantity</label>
            <input type="number" autocomplete="off" class="form-control" id="editQuantity" name="quantity" required>
          </div> 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

 
<!-- Modal Delete lot -->
<div class="modal fade" id="deleteLot">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteLot" action="delete_lot" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete Lot?</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteLotID" name="id">
            <input type="hidden" id="deleteLotNoLabelStatus" name="status">
            <label for="lotNo">Do you want to delete lot: <span id="deleteLotNo"></span> ?</label>
          </div>                 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>


{% endblock %}