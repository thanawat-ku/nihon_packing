{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/cpoItemSelects' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-tasks"></i> CpoItem Select list</h2>
               
                <hr>
                <div>
                  <h5>{{ sellRow.sell_no  ~ '(' ~ sellRow.sell_status ~ ')'}} </h5>
                  <span>{{'Sell Date' ~ sellRow.sell_date}}</span><br>
                  <span>{{'Total Quantity:' ~ sellRow.total_qty}}</span>
                  
                </div>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Cpo No</th>
                        <th>Quantity</th>
                        {# <th>Sell Quantity</th> #}
                        <th>Due Date</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cpo in CpoItemSelects %}                    
                    <tr>
                        <td>{{ '(' ~ cpo.PONo ~ ') ' ~ cpo.CpoNo}}</td>
                        <td>{{ cpo.Quantity - cpo.PackingQty }}</td>
                        {# <td>{{ cpo.sell_qty }}</td> #}
                        <td>{{ cpo.DueDate}}</td>
                        {# <td>{{ cpo.Quantity}}</td>
                        <td>{{ cpo.PackingQty}}</td> #}
                        <td>
                        <button type="button" id="addBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addSellCpoItem" name="{{ cpo|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-plus-circle"></i></button>
                        
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
