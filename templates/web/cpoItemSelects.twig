<!-- Modal Add CpoItem -->
<div class="modal fade" id="addSellCpoItem">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editCpoItemSelect" action="add_CpoItem" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add Cpo Item For Sell</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-sell">
            <input type="hidden" id="addCpoItemID" name="CpoItemID">
            <input type="hidden" id="addSellID" name="sell_id" value="{{sellRow.id}}">
            <input type="hidden"  name="sell_gg" value="gg">
            <label for="CpoNo">Cpo No:<span id="addCpoNo"></span></label>
          </div>          
          <div class="form-sell">
            <label for="editName">Remain Qty:</label><br>
            <input type="text" autocomplete="off" class="form-control" id="addRemainQty" name="remain_qty" readOnly>
          </div>       
          <div class="form-sell">
            <label for="editStdPack">Sell Qty</label>
            <input type="number" max="{{cpo.Quantity}}" autocomplete="off" class="form-control" id="addSellQty" name="sell_qty" required>
          </div> 
           {# <div class="form-sell">
            <label for="CpoItemID">gg</label>
            <input type="text" autocomplete="off" class="form-control" id="addCpoItemID" name="CpoItemID" required>
          </div>              #}
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Add</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Detail CpoItem -->
<div class="modal fade" id="detailCpoItem">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteCpoItemSelect" action="delete_sell" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Detail CpoItem</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-sell">
            <label for="CpoNo">Cpo No:<span id="detailCpoNo"></span></label>
          </div>                 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}