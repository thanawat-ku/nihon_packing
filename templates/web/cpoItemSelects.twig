{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/cpoItemSelects' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fas fa-tasks"></i>
					CpoItem Select list</h2>

				<hr>
				<div>
					<h5>{{ sellRow.sell_no  ~ '(' ~ sellRow.sell_status ~ ')'}}
					</h5>
					<span>{{sellRow.part_name ~ '(' ~ sellRow.part_code ~ ')'}}</span><br>
					<span>{{'Sell Date' ~ sellRow.sell_date}}</span><br>
					<span>{{'Total Quantity:' ~ sellRow.total_qty}}</span>

				</div>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Cpo No</th>
							<th>Quantity</th>
							<th>Due Date</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for cpo in CpoItemSelects %}
							<tr>
								<td>{{ '(' ~ cpo.PONo ~ ') ' ~ cpo.CpoNo}}</td>
								<td>{{ cpo.Quantity - cpo.PackingQty }}</td>
								<td>{{ cpo.DueDate}}</td>
								<td>
									<button type="button" id="addBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addSellCpoItem" name="{{ cpo|json_encode }}">
										<i style="font-size:15px; width:20px;" class="fas fa-plus-circle"></i>
									</button>

								</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>
				<form action="cpo_items" method="get" id="formCpoItem">
					<input type="hidden" id="productID" name="product_id" value="{sellRow.product_id}}">
					<input type="hidden" id="sellID" name="sell_id" value="{{sellRow.id}}">
					<button type="submit" class="btn btn-primary" id="black">
						<i class="fas fa-arrow-left"></i>
						Back</button>
				</form>
				<p></p>
			</div>
		</div>
	</div>

	<!-- Modal Add CpoItem -->
	<div class="modal fade" id="addSellCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-editCpoItemSelect" action="add_cpo_item" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Add Cpo Item for Sell</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="addCpoItemID" name="cpo_item_id">
							<input type="hidden" id="addSellID" name="sell_id" value="{{sellRow.id}}">
							<label for="CpoNo">Cpo No:
								<span id="addCpoNo"></span>
							</label>
						</div>
						<div class="form-sell">
							<label for="editName">Remain QTY
							</label><br>
							<input type="text" autocomplete="off" class="form-control" id="addRemainQty" name="remain_qty" readonly>
						</div>
						<div class="form-sell">
							<label for="editStdPack">Sell QTY</label>
							<input type="number" autocomplete="off" class="form-control" name="sell_qty" id="addRemainMax" min="1" max="0">

						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Add</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Detail CpoItem -->
	<div class="modal fade" id="detailCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteCpoItemSelect" action="delete_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Detail Cpo Item</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<label for="CpoNo">Cpo No:
								<span id="detailCpoNo"></span>
							</label>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
