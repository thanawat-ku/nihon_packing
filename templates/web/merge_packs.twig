{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-merge_pack"></i> MergePack list</h2>
                <button type="button" id="addBt" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addMergePack"><i style="font-size:15px; width:20px;" class="fas fa-merge_pack"></i> Add MergePack</button>      
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>STD Pack</th>
                        <th>STD Box</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# {% for merge_pack in merge_packs %}                    
                    <tr>
                        <td>{{ merge_pack.merge_pack_code }}</td>
                        <td>{{ merge_pack.merge_pack_name }}</td>
                        <td>{{ merge_pack.price }}</td>
                        <td>{{ merge_pack.std_pack }}</td>
                        <td>{{ merge_pack.std_box }}</td>
                    </tr>
                    {% endfor %} #}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
