{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/labelsLot' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-newspaper"></i> Labels in lot: {{lot_no}}</h2>    
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                     <tr>
                        <th>Label No</th>
                        <th>Lot No</th>
                        <th>Product Name</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for label in labels %}                    
                    <tr>
                      <td>{{ label.label_no }}</td>
                        {% if label.status  == "CREATED" %}
                        <td>{{ label.lot_no }}</td>
                        {% endif %}
                        {% if label.status  != "CREATED" %}
                        <td>{{ label.generate_lot_no	 }}</td>
                        {% endif %}
                        <td>{{ '(' ~ label.part_code ~ ') ' ~ label.part_name }}</td>
                        <td>{{ label.label_type }}</td>
                        <td>{{ label.quantity }}</td>
                        <td>{{ label.status }}</td>
                        <td>
                        {% if label.status  == "PACKED" %}
                        <button type="button" id="SplitBt" class="btn btn-info btn-sm" data-toggle="modal" data-target="#splitLabel" name="{{ label|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-object-ungroup"></i></button>
                        <button type="button" id="voidBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#voidLabel" name="{{ label|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-exclamation-triangle"></i></button>
                        {% endif %}
                        {% if label.status  == "CREATED"%}
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editLabel" name="{{ label|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteLabel" name="{{ label|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <form id="form-black" class="form-inline float-none" action="lots" method="get">
                  <button type="submit" class="btn btn-primary" id="black"><i class="fas fa-arrow-left"></i> Back</button>
                </form>
                <p></p>
            </div>
        </div>
    </div>

<!-- Modal void label -->
<div class="modal fade" id="voidLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-voidLabel" action="void_label" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Void Label</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="voidLabelID" name="id">
          </div>                            
          <div class="form-voidReason">
            <label for="email">Reason Name</label>
            <select class="form-control"  id="voidReasonName" name="label_void_reason_id">
            {% for v in void_reasons %}
              <option value={{ v.id }}>{{v.reason_name}} </option>
            {% endfor %}
            </select>
          </div> 
          {# <div class="form-voidReason">
            <label for="labelNo">Description</label>
            <input type="text" autocomplete="off" class="form-control" id="voidDescription" name="description" required>
          </div> #}
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-warning">Void</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal edit label -->
<div class="modal fade" id="editLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editLabel" action="edit_label" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit Label</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="editLabelID" name="id">
            <input type="hidden" id="editLotId" name="lot_id">
            <label for="labelNo">Label No</label>
            <input type="text" autocomplete="off" class="form-control" id="editLabelNo" name="label_no" required>
          </div>                            
          <div class="form-product">
            <label for="labelNo">Quantity</label>
            <input type="number" autocomplete="off" class="form-control" id="editQuantity" name="quantity" required>
          </div>
          <div class="form-type">
            <label for="email">Type</label>
            <select class="form-control"  id="editLabelType" name="label_type">
              <option value="FULLY">FULLY</option>
              <option value="NONFULLY">NONFULLY</option>
              <option value="MERGE_FULLY">MERGE_FULLY</option>
              <option value="MERGE_NONFULLY">MERGEE_NONFULLY</option>
            </select>
          </div>
          <div class="form-type">
            <label for="email">Status</label>
            <select class="form-control"  id="editStatus" name="status">
              <option value="CREATED">CREATED</option>
              <option value="PACKED">PACKED</option>
              <option value="USED">USED</option>
              <option value="MERGED">MERGED</option>
              <option value="VOID">VOID</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Delete labels -->
<div class="modal fade" id="deleteLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteLot" action="delete_label" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete Label?</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteLabelID" name="id">
            <label for="lotNo">Do you want to delete label: <span id="deleteLotNo"></span> ?</label>
          </div>                 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal split label -->
<div class="modal fade" id="splitLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-splitLabel" action="split_label" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Split Label </h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="SPLabelID" name="label_id">
            <label for="lotNo">Label are you splitting is: <span id="SPLabelNo">xxx</span></label>
          </div> 
          <div class="form-product">
            <label for="labelNo">Add Quantity</label>
            <input type="number" autocomplete="off" class="form-control" id="qty1" name="qty1" required>
          </div>
          <div class="form-product">
            <label for="labelNo">Add Quantity</label>
            <input type="number" autocomplete="off" class="form-control" id="qty2" name="qty2" required>
          </div>  
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-info">Split</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}