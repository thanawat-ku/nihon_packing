{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/sections' %}
{% endblock %}

{% block title_all_page %}
  <title> Nihon Packing : Sections </title>
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-puzzle-piece"></i> Section list</h2>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>   
                    </tr>
                    </thead>
                    <tbody>
                    {% for sections in sections %}                    
                    <tr>
                        <td>{{ sections.section_name }}</td>
                        <td>{{ sections.section_description }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
      </div>


{% endblock %}