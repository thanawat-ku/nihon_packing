{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/sells' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				{% if checkError == "true" %}
					<script>
						function errorLoad() {
						alert("Add sell fail! please check product id");
						}
				  	</script>
				
				  {% if 1 != 2 %}
					<script>errorLoad()</script>
				  {% endif %}
				{% endif %}
				<h2>
					<i class="fa fa-shopping-cart"></i>
					Pack list</h2>
				<button type="button" id="addBt" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#addSell">
					<i style="font-size:15px; width:20px;" class="fas fa-plus"></i>
					Add Pack</button>
				<label for=" ">
					<span></span>
				</label>
				<form id="form-searchIssue" class="form-inline float-right" action="" method="get">
					Issue Date From:&nbsp;&nbsp;
					<input type="text" autocomplete="off" class="form-control" id="searchIssueStartDate" name="startDate" value="{{startDate}}">&nbsp;&nbsp;To&nbsp;&nbsp;
					<input type="text" autocomplete="off" class="form-control" id="searchIssueEndDate" name="endDate" value="{{endDate}}">&nbsp;&nbsp;
					<button type="submit" class="btn btn-warning" id="searchIssueBt">
						<i class="fas fa-search fa-lg"></i>
						Search</button>
				</form>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Pack No</th>
							<th>Pack Date</th>
							<th>Part Code</th>
							<th>Part No</th>
							<th>Total Quantity</th>
							<th>Pack Status</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for sell in sells %}
							<tr>
								<td>{{ sell.sell_no }}</td>
								<td>{{ sell.sell_date }}</td>
								<td>{{ sell.part_code }}</td>
								<td>{{ sell.part_no }}</td>
								<td>{{ sell.total_qty }}</td>
								<td>{{ sell.sell_status }}</td>
								<td>
									{% if  sell.sell_status == "SELECTING_CPO" %}
										<button type="button" id="conBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#confirmCpoItem" name="{{ sell|json_encode }}">
											<i style="font-size:15px; width:20px;" class="fas fa-check"></i>
										</button>
									{% endif %}
									{% if sell.sell_status == "CREATED" or sell.sell_status == "SELECTING_CPO"%}
										<a href="cpo_items?product_id={{sell.product_id}}&sell_id={{sell.id}}">
											<button type="button" class="btn btn-secondary btn-sm" data-toggle="modal">
												<i style="font-size:15px; width:20px; " class="fa fa-list-ul"></i>
											</button>
										</a>
									{%  elseif sell.sell_status == "SELECTING_LABEL" or sell.sell_status == "SELECTED_CPO"%}
										<a href="sell_labels?product_id={{sell.product_id}}&sell_id={{sell.id}}">
											<button type="button" class="btn btn-success btn-sm" data-toggle="modal">
												<i style="font-size:15px; width:20px; " class="fas fa-cart-arrow-down"></i>
											</button>
										</a>
									{%  elseif sell.sell_status == "CONFIRMED" or sell.sell_status == "PRINTED" or sell.sell_status == "TAGGED"%}
										<a href="tags?sell_id={{sell.id}}">
											<button type="button" class="btn btn-success btn-sm" data-toggle="modal">
												<i style="font-size:15px; width:20px; " class="fas fa-folder-open"></i>
											</button>
										</a>
										{% else %}
									{% endif %}
									{% if sell.sell_status == "SELECTED_CPO" or sell.sell_status == "SELECTING_LABEL"  %}
										<button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editSell" name="{{ sell|json_encode }}">
											<i style="font-size:15px; width:20px;" class="fas fa-edit"></i>
										</button>
									{% endif %}
									{% if sell.sell_status != "COMPLETE" %}
										<button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteSell" name="{{ sell|json_encode }}">
											<i style="font-size:15px; width:20px;" class="fas fa-trash"></i>
										</button>
									{% endif %}

								</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>

				<p></p>
			</div>
		</div>
	</div>

	<!-- Modal Register Tag -->
	<div class="modal fade" id="registerModal">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-addSell" action="register_tags" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Register Pack</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="regisSellID" name="id">
							<label for="email">Register Pack No:</label>
							<span id="regisSellNo"></span>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Confirm</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Add sell -->
	<div class="modal fade" id="addSell">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-addSell" action="add_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Add Pack</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<label for="email">Select Product</label>
							<select class="selectpicker form-control" id="addProductID" name="product_id" data-live-search="true">
								{% for p in products %}
									<option value={{ p.id }}>{{p.part_code }}
									</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Add</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Edit sell -->
	<div class="modal fade" id="editSell">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-editSell" action="edit_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Edit Pack</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="editSellID" name="id">
							<label for="labelNo">Pack No:
								<span id="editSellNo"></span>
							</label>
							<label for="labelNo">
								<span id="editProductName"></span>
							</label>
						</div>
						<div class="form-sell">
							<label for="email">Select Pack Status</label>
							<select class="form-control" id="editSellStatus" name="sell_status">
								<option value="SELECTING_CPO">SELECTING_CPO</option>
							</select>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-primary">Save</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Delete sell -->
	<div class="modal fade" id="deleteSell">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteSell" action="delete_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Delete Pack</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="deleteSellID" name="id">
							<label for="sellNo">Do you want to delete Pack:
								<span id="deleteSellNo"></span>
								<span></span>
								<span id="deleteSellName"></span>
							</label>
						</div>

					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-danger">Delete</button>
						<button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="modal fade" id="confirmCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteCpoItem" action="confirm_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Confirm CPO Item</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="conSellID" name="sell_id">
							<label for="sellNo">Are you sure to confirm Pack No:
								<span id="conSellNo"></span>
								?
							</label>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Confirm</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="modal fade" id="printTags">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteCpoItem" action="print_tags_in_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Print tags in Pack</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="printSellID" name="sell_id">
							<label for="sellNo">Do you want to print tags in Pack No:
								<span id="printSellNo"></span>
								?
							</label>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Confirm</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>


{% endblock %}
