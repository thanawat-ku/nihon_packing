{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/invoiceDetails' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-thin fa-file-invoice "></i> Invoice Detail list</h2>
                <label for=" ">
                    <span></span>
                </label>
                <hr>
                <div>
                    <span>{{'Invoice No: ' ~ invoice[0].invoice_no }}</span><br>
                    <span>{{'Date: ' ~ invoice[0].date  }}</span><br>
                </div>
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Pack No</th>
                        <th>Part Code</th>
                        <th>Total Quantity</th>
                       
                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoiceDetails %}                    
                    <tr>
                        <td>{{ invoice.pack_no }}</td>
                        <td>{{ invoice.part_code }}</td>
                        <td>{{ invoice.total_qty }}</td>
                        
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
    
{% endblock %}