{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/cpoItem' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fa fa-list-ul"></i>
					Cpo Item list</h2>
				<form action="cpo_item_selects" method="get" id="{{ sellRow.id }}">
					<input type="hidden" id="productID" name="ProductID" value="{{ sellRow.product_id }}">
					<input type="hidden" id="sellID" name="sell_id" value="{{ sellRow.id }}">
				</form>
				<button type="submit" form="{{ sellRow.id }}" id="addBt" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#addCpoItem">
					<i style="font-size:15px; width:20px;" class="fas fa-plus"></i>
					Add Cpo Item</button>
				{% if sellRow.total_qty != 0 %}
					<button type="button" id="conBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#confirmCpoItem" name "{{ sellRow|json_encode }}">
						<istyle= style="font-size:15px; width:20px;" class="#"></istyle="font-size:15px;width:20px;"class="fasfa-check">
						<i style="font-size:15px; width:20px;" class="fas fa-check"></i>
						Confirm</button>
				{% endif %}
				<hr>
				<div>
					<h5>{{ sellRow.sell_no  ~ '(' ~ sellRow.sell_status ~ ')'}}
					</h5>
					<span>{{sellRow.part_name ~ '(' ~ sellRow.part_code ~ ')'}}</span><br>
					<span>{{'Sell Date: ' ~ sellRow.sell_date}}</span><br>
					<span>{{'Total Quantity: ' ~ sellRow.total_qty}}</span>
				</div>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Cpo No</th>
							<th>Due Date</th>
							<th>Remain Quantity</th>
							<th>Sell Quantity</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for cpo in CpoItem %}
							<tr>
								<td>{{ cpo.cpo_no }}</td>
								<td>{{ cpo.due_date}}</td>
								<td>{{ cpo.quantity }}</td>
								<td>{{ cpo.sell_qty }}</td>
								<td>
									<button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editCpoItem" name="{{ cpo|json_encode }}">
										<i style="font-size:15px; width:20px;" class="fas fa-edit"></i>
									</button>
									<button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteCpoItem" name="{{ cpo|json_encode }}">
										<i style="font-size:15px; width:20px;" class="fas fa-trash"></i>
									</button>
								</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>
				<form id="form-black" class="form-inline float-none" action="sells" method="get">
					<button type="submit" class="btn btn-primary" id="black">
						<i class="fas fa-arrow-left"></i>
						Back</button>
				</form>
				<p></p>
			</div>
		</div>
	</div>
	<!-- Modal Add sell -->

	<!-- Modal Edit sell -->
	<div class="modal fade" id="editCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-editCpoItem" action="edit_cpoidtem" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Edit Cpo Item</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="editCpoItemID" name="id">
							<input type="hidden" id="#" name="sell_id" value="{{sellRow.id}}">
							<label for="labelNo">Cpo No:
								<span id="editCpoNo"></span>
							</label>
						</div>
						<div class="form-sell">
							<label for="editName">Sell Quantity</label>
							<input type="number" autocomplete="off" class="form-control" id="editSellQty" readonly>
						</div>
						<div class="form-sell">
							<label for="editName">Edit Sell Quantity</label>
							<input type="number" autocomplete="off" class="form-control" id="editSellQtyMax" name="sell_qty" max="0" min="1">
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-primary">Save</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Delete sell -->
	<div class="modal fade" id="deleteCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteCpoItem" action="delete_CpoItem" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Delete Cpo Item</h4>

						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="deleteCpoItemID" name="id">
							<input type="hidden" id="#" name="sell_id" value="{{sellRow.id}}">
							<label for="sellNo">Do you want to delete Cpo No:
								<span id="deleteCpoNo"></span>
								<span></span>
								<span id="deleteCpoItemName"></span>
							</label>
						</div>

					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-danger">Delete</button>
						<button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="modal fade" id="confirmCpoItem">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteCpoItem" action="confirm_sell" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Confirm Cpo Item</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="conSellID" name="sell_id" value="{{sellRow.id}}">
							<label for="sellNo">Are you sure to confirm
								{{sellRow.sell_no}}<span id="conSellNo"></span>
								?
							</label>
							{# <label for="sellNo">Are you sure confirm: <span id="conSellNo"></span> #}
							{# <span> </span><span id="deleteCpoItemName"></span></label> #}
						</div>

					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Confirm</button>
						<button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
