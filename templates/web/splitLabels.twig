{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/splitLabels' %}
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-object-ungroup"></i> Split Label list</h2>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">     
                    <thead>
                    <tr>
                        <th>Split Label No</th>
                        <th>Label NO</th>
                        <th>status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for splitLabel in splitLabels %}                    
                    <tr>
                        <td>{{ splitLabel.split_label_no}}</td>
                        <td>{{ splitLabel.label_no}}</td>
                        <td>{{ splitLabel.status}}</td>
                        <td>
                        <button type="button" id="editBt" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editSplitLabel" name="{{ splitLabel|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-edit"></i></button>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteSplitLabel" name="{{ splitLabel|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        <a href="label_splitlabel?id={{splitLabel.id}}"><button type="button" class="btn btn-success btn-sm" data-toggle="modal" ><i style="font-size:15px; width:20px;" class="fas fa-info-circle"></i></button></a> 
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>

<!-- Modal edit splitLabel -->
<div class="modal fade" id="editSplitLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-editSplitLabel" action="edit_splitLabel" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Edit SplitLabel</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="editSplitLabelID" name="id">
            <label for="splitLabelNo">SplitLabel No</label>
            <input type="text" autocomplete="off" class="form-control" id="editSplitLabelNo" name="splitLabel_no" required>
          </div>                 
          <div class="form-product">
            <label for="email">Product</label>
            <select class="form-control"  id="editProductID" name="product_id">
            {% for p in products %}
              <option value={{ p.id }}>({{p.product_code}}) {{ p.product_name}} </option>
            {% endfor %}
            </select>
          </div>           
          <div class="form-product">
            <label for="splitLabelNo">Quantity</label>
            <input type="text" autocomplete="off" class="form-control" id="editQuantity" name="quantity" required>
          </div> 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

 
<!-- Modal Delete splitLabel -->
<div class="modal fade" id="deleteSplitLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="form-deleteSplitLabel" action="delete_splitLabel" method="post">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Delete SplitLabel</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">          
          <div class="form-product">
            <input type="hidden" id="deleteSplitLabelID" name="id">
            <input type="hidden" id="deleteSplitLabelNoLabelStatus" name="status">
            <label for="splitLabelNo">Do you want to delete splitLabel: <span id="deleteSplitLabelNo"></span></label>
          </div>                 
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>


{% endblock %}