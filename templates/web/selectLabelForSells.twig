{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/selectLabelForSells' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fas fa-cart-plus"></i>
					Label Select list</h2>
				<hr>
				<div>
					<h5>{{ sellRow.sell_no  ~ '(' ~ sellRow.sell_status ~ ')'}}
					</h5>
					<span>{{'Sell Date' ~ sellRow.sell_date}}</span><br>
					<span>{{'Total Quantity:' ~ sellRow.total_qty}}</span>
				</div>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Label No</th>
							<th>Lot NO/Merge NO</th>
							<th>Label Type</th>
							<th>Status</th>
							<th>Quantity</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for label in labels[0] %}
							<tr>
								<td>{{ label.label_no }}</td>
								<td>{{ label.lot_no }}</td>
								<td>{{ label.label_type }}</td>
								<td>{{ label.status }}</td>
								<td>{{ label.quantity}}</td>
								<td>
									{% if label.status == "SELLING"%}
										<button type="button" id="canBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#cancelSelectLabelForSell" name="{{ label|json_encode }}">
											<i style="font-size:15px; width:20px;" class="fas fa-check"></i>
										</button>
									{% else %}
										<button type="button" id="addBt" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#addSelectLabelForSell" name="{{ label|json_encode }}">
											<i style="font-size:15px; width:20px;" class="fas fa-plus">
											{% endif %}
										</td>
									</tr>
								{% endfor %}
								{% for label in labels[1] %}
									<tr>
										<td>{{ label.label_no }}</td>
										<td>{{ label.merge_no }}</td>
										<td>{{ label.label_type }}</td>
										<td>{{ label.status }}</td>
										<td>{{ label.quantity}}</td>
										<td>
											{% if label.status == "SELLING"%}
												<button type="button" id="canBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#cancelSelectLabelForSell" name="{{ label|json_encode }}">
													<i style="font-size:15px; width:20px;" class="fas fa-check"></i>
												</button>
											{% else %}
												<button type="button" id="addBt" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#addSelectLabelForSell" name="{{ label|json_encode }}">
													<i style="font-size:15px; width:20px;" class="fas fa-plus"></i>
												</button>
											{% endif %}
										</td>
									</tr>
								{% endfor %}
							</tr>
						</tbody>
					</tbody>
					<tfoot></tfoot>
				</table>
				<form action="sell_labels" method="post" id="formCpoItem">
					<input type="hidden" id="productID" name="product_id" value="{{sellRow.product_id}}">
					<input type="hidden" id="sellID" name="sell_id" value="{{sellRow.id}}">
					<button type="submit" class="btn btn-primary" id="black">
						<i class="fas fa-arrow-left"></i>
						Back</button>
				</form>
				<p></p>
			</div>
		</div>
	</div>

	<!-- Cancel Sell Label -->
	<div class="modal fade" id="cancelSelectLabelForSell">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteSelectLabelForSell" action="cancel_sell_label" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Cancel Sell Label</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="cancelLabelID" name="id">
							<input type="hidden" id="addSellID" name="sell_id" value="{{sellRow.id}}">
							<label for="labelNo">Cancel Label NO:<span id="cancelLabelNo"></span>
							</label>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-danger">Confirm</button>
						<button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Add Sell Label -->
	<div class="modal fade" id="addSelectLabelForSell">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-editCpoItemSelect" action="add_sell_label" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Add Cpo Item For Sell</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-sell">
							<input type="hidden" id="addLabelID" name="id">
							<input type="hidden" id="addSellID" name="sell_id" value="{{sellRow.id}}">
							<label for="labelNo">Label NO:<span id="addLabelNo"></span>
							</label>
						</div>
						<div class="modal-footer">
							<button type="submit" class="btn btn-success">Add</button>
							<button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
						</div>
					</form>
				</div>
			</div>
		</div>

	{% endblock %}
