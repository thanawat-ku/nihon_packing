{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/tags' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fa fa-shopping-cart"></i>
					Tag list</h2>
				{% if tags[0].sell_status == "SELECTED_LABEL" %}
				<button type="button" id="conBt" class="btn btn-success btn-sm" data-toggle="modal" data-target="#registerTag" name="{{ label|json_encode }}">
					<i style="font-size:15px; width:20px;" class="fas fa-check"></i>Register
				</button>
				{% endif %}
				<label for=" ">
					<span></span>
				</label>
				
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Tag No</th>
							<th>Quantity</th>
							<th>Box No</th>
							<th>Total Box</th>
							<th>Status</th>

						</tr>
					</thead>
					<tbody>
						{% for tag in tags %}
							<tr>
								<td>{{ tag.tag_no }}</td>
								<td>{{ tag.quantity }}</td>
								<td>{{ tag.box_no }}</td>
								<td>{{ tag.total_box }}</td>
								<td>{{ tag.status }}</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>

				<p></p>
			</div>
		</div>
	</div>

	<!-- Modal Accept Scrap -->
	<div class="modal fade" id="registerTag">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteScrapDetail" action="register_tags" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Register Tag</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-scrap_detail">
							<input type="hidden" name="id" value="{{tags[0].sell_id}}">
							<label for="scrap_detailNo">Do you want Register Tags
							</label>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-success">Register</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
