{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/mergeDetail' %} <!-- Focus that!!!! -->
{% endblock %}

{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-folder-plus"></i> Labels in Merge No : {{ mergePack['merge_no'] }}</h2>  <!--dont show merge no -->    
                <a href="label_merges?id={{mergePack['id']}} "><button type="button" id="addLabelBt" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#addLabel"><i style="font-size:15px; width:20px;" class="fas fa-newspaper"></i> Select Label</button></a>
                {# <form id="form-label" class="form-inline float-none" action="label_merges" method="get">
                  <button type="submit" id="addLabelBt" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#addLabel" name="id"><i style="font-size:15px; width:20px;" class="fas fa-plus"></i> Add Label</button> 
                </form> #}
                <hr>
                <table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                     <tr>
                        <th>Label No</th>
                        <th>Lot No</th>
                        <th>Mergre No</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for label in labels %}                    
                    <tr>
                      <td>{{ label.label_no }}</td>
                        {% if label.status  == "CREATED" %}
                        <td>{{ label.lot_no }}</td>
                        {% endif %}
                        {% if label.status  != "CREATED" %}
                        <td>{{ label.generate_lot_no	 }}</td>
                        {% endif %}
                        <td>{{ label.merge_no}}</td>
                        <td>{{ '(' ~ label.part_code ~ ') ' ~ label.part_name }}</td>
                        <td>{{ label.label_type }}</td>
                        <td>{{ label.quantity }}</td>
                        <td>{{ label.status }}</td>
                        <td>
                        <button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteLabel" name="{{ label|json_encode }}"><i style="font-size:15px; width:20px;" class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
                <form id="form-black" class="form-inline float-none" action="merges" method="get">
                  <button type="submit" class="btn btn-primary" id="black"><i class="fas fa-arrow-left"></i> Black</button>
                </form>
                <p></p>
            </div>
        </div>
    </div>




{% endblock %}