{% extends "layout/layout.twig" %}

{% block css %}
	{% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
	{% webpack_entry_js 'layout/datatables' %}
	{% webpack_entry_js 'web/scrapDetails' %}
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h2>
					<i class="fas fa-sitemap"></i>
					Scrap Detail list</h2>
				<form action="lot_defect_for_scrap" method="get" id="{{ scrapRow.id }}">
					<input type="hidden" name="scrap_id" value="{{ scrapRow.id }}">
				</form>
				<button type="submit" id="addBt" form="{{ scrapRow.id }}" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#addSellLabels">
					<i style="font-size:15px; width:20px;" class="fas fa-plus"></i>
					Add Sell Labels</button>
				<label for=" ">
					<span></span>
				</label>
				<hr>
				<div>
					<h5>{{ scrapRow.scrap_no }}</h5>
					<span>{{'Scrap Date: ' ~ scrapRow.scrap_date}}</span><br>
					<span>{{'Scrap Status: ' ~ scrapRow.scrap_status}}</span>
				</div>
				<hr>
				<table id="my-data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
					<thead>
						<tr>
							<th>Scrap No</th>
							<th>Section Name</th>
							<th>Product Name</th>
							<th>Quantity</th>
							<th>Operation</th>
						</tr>
					</thead>
					<tbody>
						{% for scrap_detail in scrap_details %}
							<tr>
								<td>{{ scrap_detail.scrap_detail_no }}</td>
								<td>{{ scrap_detail.section_name }}</td>
								<td>{{ '(' ~ scrap_detail.part_code ~ ') ' ~ scrap_detail.part_name}}</td>
								<td>{{ scrap_detail.scrap_detail_qty }}</td>
								<td>
									<button type="button" id="deleteBt" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteScrapDetail" name="{{ scrap_detail|json_encode }}">
										<i style="font-size:15px; width:20px;" class="fas fa-trash"></i>
									</button>
								</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot></tfoot>
				</table>
				<form action="scraps" method="get">
					<button type="submit" class="btn btn-primary" id="black">
						<i class="fas fa-arrow-left"></i>
						Back</button>
				</form>
				<p></p>
			</div>
		</div>
	</div>

	<!-- Modal Delete scrap Detail -->
	<div class="modal fade" id="deleteScrapDetail">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<form
					id="form-deleteScrapDetail" action="delete_scrap_detail" method="post">
					<!-- Modal Header -->
					<div class="modal-header">
						<h4 class="modal-title">Delete ScrapDetail</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>
					<!-- Modal body -->
					<div class="modal-body">
						<div class="form-scrap_detail">
							<input type="hidden" id="deleteScrapDetailID" name="id">
							<label for="scrap_detailNo">Do you want to delete ScrapDetail:
								<span id="deleteScrapDetailNo"></span>
								<span></span>
								<span id="deleteScrapDetailName"></span>
							</label>
						</div>

					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-danger">Delete</button>
						<button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
